<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TerminalUX.Pages.DefaultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TerminalUX.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="12,8,0,0"
            FontSize="20"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Defaults" />
        <TextBlock
            Grid.Row="1"
            Margin="12,0,0,4"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="Applies to all profiles unless overridden by profile settings." />
        <ScrollViewer Grid.Row="2">
            <StackPanel
                Margin="12,8,12,8"
                Orientation="Vertical"
                Spacing="{StaticResource SettingsCardSpacing}">
                <controls:SettingsCard Description="The directory the profile starts in when it is loaded." Header="Starting directory">
                    <Button Content="Browse" />
                </controls:SettingsCard>
                <controls:SettingsCard Description="Emoji or image file location of the icon used in the profile" Header="Icon">
                    <Button Padding="6">
                        <FontIcon FontSize="16" Glyph="&#xE756;" />
                    </Button>
                </controls:SettingsCard>
                <controls:SettingsCard Description="Replaces the profile name as the title to pass to the shell on startup" Header="Tab title">
                    <TextBox Text="PowerShell" />
                </controls:SettingsCard>
                <controls:SettingsCard Description="If enabled, opens in Admin window, or reuses current if already elevated." Header="Run this profile as Administrator">
                    <ToggleSwitch x:Name="AdminToggle" />
                </controls:SettingsCard>

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Additional settings" />
                <controls:SettingsCard
                    Header="Appearance"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE790;}"
                    IsClickEnabled="True" />
                <controls:SettingsCard
                    Header="Terminal emulation"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE756;}"
                    IsClickEnabled="True" />
                <controls:SettingsCard
                    Header="Advanced"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE713;}"
                    IsClickEnabled="True" />
            </StackPanel>
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Margin="12,0,0,0"
            Padding="12"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="{ThemeResource InfoBarInformationalSeverityBackgroundBrush}"
            BorderBrush="{ThemeResource InfoBarBorderBrush}"
            BorderThickness="1"
            CornerRadius="8,0,0,0">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button Content="Save" Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Discard" Style="{StaticResource SubtleButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
