<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="TerminalUX.Controls.PictureHolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TerminalUX.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="ShadowCastGrid" />
        <Border
            Margin="24"
            CornerRadius="{StaticResource OverlayCornerRadius}"
            Loaded="Border_Loaded"
            Translation="0,0,32">
            <Border.Background>
                <ImageBrush>
                    <ImageBrush.ImageSource>
                        <BitmapImage x:Name="PictureImage" UriSource="{x:Bind ImageUrl, Mode=OneWay}" />
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Border.Background>

            <Border.Shadow>
                <ThemeShadow x:Name="PictureShadow" />
            </Border.Shadow>
        </Border>

    </Grid>
</UserControl>
