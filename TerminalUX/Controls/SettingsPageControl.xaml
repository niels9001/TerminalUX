<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="TerminalUX.Controls.SettingsPageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TerminalUX.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid MaxWidth="1000" Margin="36,0,36,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="12,8,0,0"
            FontSize="20"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="{x:Bind Title, Mode=OneWay}" />

        <ScrollViewer Grid.Row="1">
            <ContentPresenter Margin="12,16,12,8" Content="{x:Bind PageContent, Mode=OneWay}" />
        </ScrollViewer>
        <Grid
            Grid.Row="2"
            Margin="12,0,0,0"
            Padding="12"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="{ThemeResource InfoBarInformationalSeverityBackgroundBrush}"
            BorderBrush="{ThemeResource InfoBarBorderBrush}"
            BorderThickness="1"
            CornerRadius="8,0,0,0">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button Content="Save" Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Discard" Style="{StaticResource SubtleButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
